<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <ImageView
        android:id="@+id/img_search_item_product_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/search_screen_copy_history_search_shape"
        android:src="@drawable/search_screen_history_search_icon"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/just_image" />

    <TextView
        android:id="@+id/txt_search_item_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@id/img_search_item_product_image"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/placeholder"
        android:textSize="14sp" />
</RelativeLayout>