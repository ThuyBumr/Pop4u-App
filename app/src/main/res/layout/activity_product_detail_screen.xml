<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ProductDetailScreen.ProductDetailScreen">

    <ImageView
        android:id="@+id/imvProductImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1"
        android:src="@drawable/img"/>

    <TextView
        android:id="@+id/txtProductPrice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imvProductImage"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="360.000₫"
        android:fontFamily="@font/inter_semibold"
        android:textSize="27.5sp"
        android:textColor="@color/md_theme_error"/>

    <TextView
        android:id="@+id/txtComparingPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/txtProductPrice"
        app:layout_constraintStart_toEndOf="@+id/txtProductPrice"
        android:layout_marginStart="10dp"
        android:text="400.000₫"
        android:fontFamily="@font/inter"
        android:textColor="@color/md_theme_outline"
        android:textSize="17.5sp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/txtComparingPrice"
        app:layout_constraintBottom_toBottomOf="@id/txtProductPrice"
        android:layout_marginStart="10dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/md_theme_errorContainer"
        app:cardCornerRadius="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-25%"
            android:paddingRight="7.5dp"
            android:paddingLeft="7.5dp"
            android:paddingTop="2.5dp"
            android:paddingBottom="2.5dp"
            android:fontFamily="@font/inter_medium"
            android:textSize="15sp"
            android:textColor="@color/md_theme_error"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtProductName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtProductPrice"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:maxLines="2"
        android:text="BLACKPINK THE GAME PHOTOCARD COLLECTION LOVELY VALENTINE'S EDITION"
        android:textSize="17.5sp"
        android:fontFamily="@font/inter_semibold"
        android:ellipsize="end"        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ctr01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtProductName">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ctr02"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnAddToFavProduct"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imvStar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/star"/>
            <TextView
                android:id="@+id/txtProductRate"
                app:layout_constraintStart_toEndOf="@+id/imvStar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/inter"
                android:textColor="@color/md_theme_outline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="5.0"/>
            <TextView
                android:id="@+id/txtProductSoldAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txtProductRate"
                android:layout_marginStart="20dp"
                android:text="Da ban 120"
                android:textColor="@color/md_theme_outline"
                android:fontFamily="@font/inter"
                android:textSize="15sp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageButton
            android:id="@+id/btnAddToFavProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/favorite"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:backgroundTintMode="@drawable/button_no_filled_text_color"
            android:hapticFeedbackEnabled="true"
            app:layout_constraintStart_toEndOf="@+id/ctr02"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread_inside"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/crdProductFeature"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ctr01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/md_theme_surfaceContainer"
        app:cardCornerRadius="15dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">
            <LinearLayout
                android:id="@+id/llt01"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:src="@drawable/veri"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/md_theme_onSurfaceVariant"
                    android:text="@string/benefit_01"
                    android:textSize="15sp"
                    android:fontFamily="@font/inter"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llt02"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/llt01"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:src=""
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/md_theme_onSurfaceVariant"
                    android:text="@string/benefit_02"
                    android:textSize="15sp"
                    android:fontFamily="@font/inter"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llt03"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/llt02"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <ImageView
                    android:src="@drawable/package_2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/md_theme_onSurfaceVariant"
                    android:text="@string/benefit_03"
                    android:textSize="15sp"
                    android:fontFamily="@font/inter"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>