<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Home.ProductOfWeekFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cardElevation="0dp"
            app:cardCornerRadius="15dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imvBackGroundCard"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/crdProductOfWeek"
                    android:src="@drawable/img_1"
                    android:scaleType="centerCrop"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/crdProductOfWeek"
                    android:src="@drawable/white_background_for_blur"
                    android:scaleType="centerCrop"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/crdProductOfWeek"
                    android:layout_width="match_parent"
                    android:padding="20dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txtProductOfWeekTitle"
                        android:text="@string/product_of_week_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:fontFamily="@font/inter_semibold"
                        android:textColor="@color/md_theme_onSurface"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtProductOfWeekTitle"
                        android:layout_width="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/crdProductImage"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="0dp">
                            <ImageView
                                android:id="@+id/imvProductImage"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/img_1"
                                android:scaleType="centerCrop"/>
                        </androidx.cardview.widget.CardView>
                    <androidx.constraintlayout.widget.ConstraintLayout
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/crdProductImage"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginStart="15dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/txtProductName"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_width="match_parent"
                                android:maxLines="2"
                                android:ellipsize="end"
                                android:fontFamily="@font/inter_semibold"
                                android:textSize="17.5sp"
                                android:textColor="@color/md_theme_onSurface"
                                android:layout_height="0dp"
                                android:text="San Pham ABCDEFGHSan Pham ABCDEFGHSan Pham ABCDEFGHSan Pham ABCDEFGHSan Pham ABCDEFGHSan Pham ABCDEFGH"/>
                            <TextView
                                android:id="@+id/txtProductPrice"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/txtProductName"
                                android:layout_marginTop="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="360.000â‚«"
                                android:fontFamily="@font/inter_semibold"
                                android:textSize="20sp"
                                android:textColor="@color/md_theme_error"/>
                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toEndOf="@+id/txtProductPrice"
                                app:layout_constraintBottom_toBottomOf="@id/txtProductPrice"
                                android:layout_marginStart="10dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="@color/md_theme_errorContainer"
                                app:cardCornerRadius="10dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="-25%"
                                    android:paddingRight="7.5dp"
                                    android:paddingLeft="7.5dp"
                                    android:paddingTop="2.5dp"
                                    android:paddingBottom="2.5dp"
                                    android:fontFamily="@font/inter_medium"
                                    android:textSize="15sp"
                                    android:textColor="@color/md_theme_error"/>
                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:id="@+id/txtProductArtist"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/txtProductPrice"
                                android:layout_marginTop="10dp"
                                android:text="Lana Del Rey"
                                android:fontFamily="@font/inter"
                                android:textColor="@color/md_theme_outline"
                                android:textSize="17.5sp" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>