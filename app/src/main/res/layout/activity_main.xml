<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity">

    <Button
        android:id="@+id/btn01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17.5sp"
        android:fontFamily="@font/inter_semibold"
        android:textColor="@drawable/button_no_filled_text_color"
        android:text="Xem"
        android:background="@drawable/button_small_text_state_background"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/btn01"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="17.5sp"
        android:fontFamily="@font/inter_semibold"
        android:textColor="@drawable/button_filled_text_color"
        android:text="@string/view_all_button_content"
        android:background="@drawable/button_small_text_filled_state_background"/>

</androidx.constraintlayout.widget.ConstraintLayout>