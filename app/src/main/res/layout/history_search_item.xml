<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="52dp">

    <ImageView
        android:id="@+id/imv_history_search_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/history_search_icon"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/txt_history_search_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@+id/btn_copy_history_search"
        android:layout_toEndOf="@id/imv_history_search_icon"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="abcascascascascascasc"
        android:textSize="14sp" />

    <ImageButton
        android:id="@+id/btn_copy_history_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_insert_icon"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/copy_history_search_shape"
        android:contentDescription="sceeeee" />

</RelativeLayout>