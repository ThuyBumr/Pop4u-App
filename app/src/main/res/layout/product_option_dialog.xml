<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardCornerRadius="20dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ctrSelectedProduct"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:id="@+id/crdProductImage"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="10dp">
                    <ImageView
                        android:src="@drawable/img"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>
                </androidx.cardview.widget.CardView>
                <androidx.constraintlayout.widget.ConstraintLayout
                    app:layout_constraintStart_toEndOf="@+id/crdProductImage"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="12dp">
                    <TextView
                        android:id="@+id/txtProductPrice"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:fontFamily="@font/inter_semibold"
                        app:layout_constraintBottom_toTopOf="@id/txtComparingPrice"
                        android:textSize="22sp"
                        android:text="440.000₫"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/md_theme_error"/>
                    <TextView
                        android:id="@+id/txtComparingPrice"
                        app:layout_constraintTop_toBottomOf="@+id/txtProductPrice"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/txtOptionName"
                        android:fontFamily="@font/inter"
                        android:textSize="14sp"
                        android:text="490.000₫"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/md_theme_outline"/>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/crdSalePercent"
                        app:layout_constraintStart_toEndOf="@id/txtComparingPrice"
                        app:layout_constraintTop_toTopOf="@id/txtComparingPrice"
                        app:layout_constraintBottom_toBottomOf="@id/txtComparingPrice"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="4dp"
                        android:layout_marginStart="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/md_theme_errorContainer">
                        <TextView
                            android:id="@+id/txtSalePercent"
                            app:layout_constraintTop_toBottomOf="@+id/txtComparingPrice"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:fontFamily="@font/inter_medium"
                            android:textSize="12sp"
                            android:text="-15%"
                            android:paddingEnd="4dp"
                            android:paddingStart="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/md_theme_error"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/txtOptionName"
                        app:layout_constraintTop_toBottomOf="@+id/txtComparingPrice"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:fontFamily="@font/inter_medium"
                        android:textSize="14sp"
                        android:text="Hồng"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/md_theme_outline"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/dvd01"
                app:layout_constraintTop_toBottomOf="@+id/ctrSelectedProduct"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txtOptionHead"
                app:layout_constraintTop_toBottomOf="@+id/dvd01"
                app:layout_constraintStart_toStartOf="parent"
                android:fontFamily="@font/inter_semibold"
                android:layout_marginTop="20dp"
                android:textSize="16sp"
                android:text="@string/option_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/md_theme_onSurface"/>
            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/dvd02"
                app:layout_constraintTop_toBottomOf="@+id/txtOptionHead"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txtAmountHead"
                app:layout_constraintTop_toBottomOf="@+id/dvd02"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:fontFamily="@font/inter_semibold"
                android:layout_marginTop="24dp"
                android:textSize="16sp"
                android:text="@string/amount_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/md_theme_onSurface"/>
            <LinearLayout
                app:layout_constraintTop_toTopOf="@+id/txtAmountHead"
                app:layout_constraintBottom_toBottomOf="@id/txtAmountHead"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    style="?attr/materialIconButtonFilledStyle"
                    android:id="@+id/btnDownAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/up_amount"
                    app:icon="@drawable/remove_24px"/>
                <TextView
                    android:id="@+id/txtAmount"
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:fontFamily="@font/inter_semibold"
                    android:text="1"
                    android:gravity="center"/>
                <Button
                    style="?attr/materialIconButtonFilledStyle"
                    android:id="@+id/btnUpAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/up_amount"
                    app:icon="@drawable/add_24px"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>