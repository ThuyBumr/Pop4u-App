<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/o_thumb"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/photo_ex"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/o_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="The Album - BlackPink"
                android:textSize="20sp"
                android:textStyle="bold"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/o_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BLACKPINK"
                android:fontFamily="@font/inter"

                />
                <TextView
                    android:id="@+id/o_option"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hồng"
                    android:layout_marginStart="100dp"
                    android:fontFamily="@font/inter"
                    />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="10">
            <TextView
                android:id="@+id/o_pricebuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="460.000"
                android:textSize="18sp"
                android:textColor="#F44336"
                android:fontFamily="@font/inter"
                android:layout_weight="6"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số lượng: "
                android:layout_weight="2"/>
            <TextView
                android:id="@+id/o_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:layout_weight="2"/>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>