<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VoucherScreen.ShowVoucher">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbrInputVoucher"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/md_theme_surfaceContainerLow"
        android:elevation="4dp"
        app:title="@string/voucher"
        app:titleTextColor="@color/md_theme_onSurface"
        app:titleTextAppearance="@style/TitleActionBar"
        app:menu="@menu/plain_action_bar"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <android.widget.SearchView
        android:id="@+id/svQuerySearchBox"
        app:layout_constraintTop_toBottomOf="@id/tbrInputVoucher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnApplySearch"
        android:layout_marginTop="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:queryHint="@string/search_title"
        android:queryBackground="@color/transparent"
        android:iconifiedByDefault="false"
        android:background="@drawable/search_screen_search_bar_bg"
        android:layout_marginStart="8dp"/>
    <Button
        android:id="@+id/btnApplySearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/svQuerySearchBox"
        app:layout_constraintBottom_toBottomOf="@id/svQuerySearchBox"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/transparent"
        android:text="Áp dụng"
        android:textSize="16sp"
        android:padding="0dp"
        android:layout_marginEnd="8dp"
        android:textColor="@drawable/button_no_filled_text_color"
        android:gravity="center"
        android:fontFamily="@font/inter_medium"/>
    <LinearLayout
        android:id="@+id/layoutNoVoucher"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:src="@drawable/undraw_searching_re_3ra9" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/no_voucher"
            android:fontFamily="@font/inter"
            android:textSize="18sp"
            android:textColor="@color/md_theme_outline"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
    <ListView
        app:layout_constraintTop_toBottomOf="@id/svQuerySearchBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/lvVoucher"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:visibility="gone" />
</androidx.constraintlayout.widget.ConstraintLayout>