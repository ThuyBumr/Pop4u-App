<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/md_theme_surfaceContainerLow"
        android:foreground="@drawable/foreground_onclick_color_change">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">
            <androidx.cardview.widget.CardView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/crdProductImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">
                <ImageView
                    android:id="@+id/imvProductImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
            </androidx.cardview.widget.CardView>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ctrProductInfo"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnAddToFavProduct"
                app:layout_constraintStart_toEndOf="@+id/crdProductImage"
                android:layout_marginStart="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtProductName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textSize="14sp"
                    android:paddingStart="2.5dp"
                    android:paddingEnd="2.5dp"
                    android:fontFamily="@font/inter_semibold"
                    android:text="ADVBBEDUYEUYFBYEHIUHRFUEIHRYEGIUGF"
                    android:textColor="@color/md_theme_onSurface"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:id="@+id/txtProductArtist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_marginTop="4dp"
                    android:textSize="12sp"
                    android:paddingStart="2.5dp"
                    android:paddingEnd="2.5dp"
                    android:fontFamily="@font/inter"
                    android:text="ADVBBEDUYEUYFBYEHIUHRFUEIHRYEGIUGF"
                    android:textColor="@color/md_theme_outline"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txtProductName" />
                <TextView
                    android:id="@+id/txtProductPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter_semibold"
                    android:maxLines="1"
                    android:paddingEnd="10dp"
                    android:text="450.000â‚«"
                    android:textColor="@color/md_theme_primary"
                    android:textSize="15sp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintTop_toBottomOf="@+id/txtProductArtist"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/crdSalePercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@+id/txtProductPrice"
                    app:layout_constraintBottom_toBottomOf="@+id/txtProductPrice"
                    android:layout_marginStart="10dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/md_theme_errorContainer"
                    app:cardCornerRadius="6dp">
                    <TextView
                        android:id="@+id/txtSalePercent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-25%"
                        android:paddingRight="4dp"
                        android:paddingLeft="4dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:fontFamily="@font/inter_medium"
                        android:textSize="12sp"
                        android:textColor="@color/md_theme_error"/>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <ImageButton
                android:id="@+id/btnAddToFavProduct"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ctrProductInfo"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp"
                android:contentDescription="@string/add_to_favorite_btn"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_add_to_fav_button_state"
                app:tint="@drawable/button_no_filled_text_color"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>