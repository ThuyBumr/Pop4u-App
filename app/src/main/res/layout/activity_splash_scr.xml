<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen.SplashScr">

    <ImageView
        android:id="@+id/SplSrcLgIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/splash_src_pop4u_icon"
        android:layout_marginTop="270dp" />

    <ImageView
        android:id="@+id/SplSrcNmIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/splash_src_pop4u_name"
        android:layout_below="@+id/SplSrcLgIcon"
        android:layout_marginTop="10dp" />


    <ImageView
        android:id="@+id/SplshSrcSlg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/splash_src_slogan"
        android:layout_alignParentBottom="true"
        android:paddingBottom="50dp" />

</RelativeLayout>
