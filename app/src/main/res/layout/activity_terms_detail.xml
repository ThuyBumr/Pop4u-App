<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountScreen.TermsDetail">

    <androidx.appcompat.widget.Toolbar
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/tbrSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/plain_action_bar"
        android:fitsSystemWindows="true"
        android:elevation="5dp"
        app:titleTextAppearance="@style/TitleActionBar"
        android:background="@color/md_theme_surfaceContainerLow"/>
    <WebView
        android:id="@+id/wv_term_detail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tbrSetting">


    </WebView>

</androidx.constraintlayout.widget.ConstraintLayout>