<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddressScreen.AddAddress"
    android:orientation="vertical"
    android:background="@color/white">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbrAddAdress"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_theme_surfaceContainerLow"
        android:elevation="4dp"
        app:title="@string/add_address"
        app:titleTextColor="@color/md_theme_onSurface"
        app:titleTextAppearance="@style/TitleActionBar"
        app:menu="@menu/plain_action_bar"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Liên hệ"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/inter_semibold"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Họ và tên"
            android:padding="15dp"
            android:fontFamily="@font/inter"
            android:background="@drawable/shape_edit_text"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số điện thoại"
            android:fontFamily="@font/inter"
            android:background="@drawable/shape_edit_text"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:padding="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Địa chỉ"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/inter_semibold"
            android:layout_marginBottom="10dp"/>
        <Spinner
            android:id="@+id/tinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:background="@drawable/shape_edit_text"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:padding="15dp"
            />
        <Spinner
            android:id="@+id/huyen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:background="@drawable/shape_edit_text"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:padding="15dp"
            />
        <Spinner
            android:id="@+id/phuong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:background="@drawable/shape_edit_text"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:padding="15dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cài đặt"
        android:layout_marginStart="10dp"
        android:textSize="20sp"
        android:fontFamily="@font/inter_semibold"
        android:layout_marginBottom="10dp"/>
    <Switch
        android:id="@+id/btnDefault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/shape_edit_text"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:fontFamily="@font/inter"
        android:text="Đặt làm địa chỉ mặc định"
        android:checked="false"/>
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Hoàn tất"
        android:textSize="20dp"
        android:backgroundTint="@color/md_theme_onPrimaryFixedVariant" />
    </LinearLayout>
